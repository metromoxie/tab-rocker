{
  "name": "Tab Rocker",
  "version": "0.2",
  "manifest_version": 2,
  "description": "Returns to the previous tab when you click on a tab",
  "icons": {
  	//"16":  "",
	//"48":  "",
	//"128": ""
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
	"tabs",
	"storage"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": [ "background.js" ]
  },
  "content_scripts": [{
    "matches": [ "http://*/*", "https://*/*" ],
    "js": [ "jquery.js", "content.js" ]
  }]
}
